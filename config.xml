<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.dotenorio.pegavaretas" version="1.2.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Pega Varetas</name>
    <description>
        Um jeito divertido de contar seus pontos no pega varetas
    </description>
    <author email="dotenorio@gmail.com" href="https://dotenorio.github.io">
        Fernando Migliorini TenÃ³rio
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <icon src="res/icon.png" />
    <engine name="android" spec="^7.1.0" />
</widget>
